                {
                    Value = m.PatientID.ToString(), // Assuming ScreenId is of type int
                    Text = $"{m.PatientID} - {m.FullName}"
                });
                            }

                            @Html.DropDownListFor(model => model.PatientID, patid, "Select Patient ID", new { @class = "form-control", required = "required" })
