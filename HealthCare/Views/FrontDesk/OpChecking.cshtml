@model OpCheckingViewModel

@{
    ViewData["Title"] = "OpChecking";
    Layout = "~/Views/Shared/_ContentNavbarLayout.cshtml";
}



<h1>OpChecking</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="ViewResult" asp-controller="FrontDesk">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label for="PatientID" class="control-label">Patient ID</label>
                <input type="text" id="PatientID" name="PatientID" class="form-control" />
            </div>

            <div class="form-group">
                <label for="CurrentDate" class="control-label">CurrentDate</label>
                <input type="text" id="CurrentDate" name="CurrentDate" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="GetReport" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@using (Html.BeginForm("OpChecking", "FrontDesk", FormMethod.Post))

{
    <p>
        <a asp-action="Create">Create New</a>
    </p>

<table class="table">
        <thead>
            <tr>
                <th>
                    PatientName
                </th>
                <th>
                    DoctorName
                </th>
                <th>
                    AppoinmentDate
                </th>
                <th>
                    AppoinmentTime
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>

          
        @if (Model !=null)
        {
            @foreach (var item in Model.Results)
            {
                <tr>
                    <td>@item.PatientName</td>
                            <td>@item.DoctorName</td>
                            <td>@item.AppoinmentDate</td>
                            <td>@item.AppoinmentTime</td>
                   
                </tr>
            }            
        }
            </tbody>
            </table>
    @if (Model != null)
    {
      <div class="form-group">
            <input type="submit" value="check in" class="btn btn-primary" />
      </div>
    }


}
