@model HealthCare.Models.StaffAttendanceModel

@{
    ViewData["Title"] = "StaffAttendance";
    Layout = "~/Views/Shared/_ContentNavbarLayout.cshtml";
}

<h1>StaffAttendance</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="StaffAttendance">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
