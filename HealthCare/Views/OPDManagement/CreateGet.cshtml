                        <th>Clinic Name</th>
                        <th>Patient Name</th>
                        <th>Visit Date</th>
                        
                    </tr>
                </thead>
                <tbody>
                    
                        @foreach (var item in ViewBag.PatientObjectiveData)
                        {
                        <tr>
                            <td><input type="checkbox" name="selectedPatients" value="@item.PatientID" /></td>
                            <td>@item.PatientID</td>
                            <td>@item.VisitID</td>
                            <td>@item.FacilityID</td>
                            <td>@item.ClinicName</td>
                            <td>@item.FullName</td>
                            <td>@item.VisitDate</td>
                           
                        </tr>
                        }
                   
                </tbody>
            </table>
        </div>
    </div>
       
