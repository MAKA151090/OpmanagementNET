@model List<PatientDiagnosisModel>

@{
    ViewData["Title"] = "PatientDiagnosis";
    Layout = "~/Views/Shared/_ContentNavbarLayout.cshtml";
}


<h1>PatientDiagnosis</h1>

@using (Html.BeginForm("PatientviewDiagnosis", "OPDManagement", FormMethod.Post))
{

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Examination ID</th>
                    <th>Patient ID</th>
                    <th>Visit ID</th>
                    <th>Doctor ID</th>
                    <th>Diagnosis ID</th>
                    <th>Notes</th>
                    <th>Comments</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {

                    @for (var i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td><input type="text" asp-for="@Model[i].ExamID" class="form-control" readonly /></td>
                            <td><input type="text" asp-for="@Model[i].PatientID" class="form-control" readonly /></td>
                            <td><input type="text" asp-for="@Model[i].VisitID" class="form-control" readonly /></td>
                            <td><input type="text" asp-for="@Model[i].DoctorID" class="form-control" /></td>
                            <td><input type="text" asp-for="@Model[i].DiagnosisID" class="form-control" /></td>
                            <td><input type="text" asp-for="@Model[i].Notes" class="form-control" /></td>
                            <td><input type="text" asp-for="@Model[i].Comments" class="form-control" /></td>


                        </tr>
                    }

                }
            </tbody>
        </table>

        <button type="submit" name="action" value="Save" class="btn btn-primary">Save</button>
        <button type="submit" name="action" value="Add Row" class="btn btn-primary">Add Row</button>

        @if (ViewBag.Message != null)
        {
            <div class="alert alert-success">
                @ViewBag.Message
            </div>
        }
}