@using HealthCare.Models
@using NonFactors.Mvc.Grid
@model PatientExaminationModel

@{
    ViewData["Title"] = "PatientExamination";
    Layout = "~/Views/Shared/_ContentNavbarLayout.cshtml";
}

<h1>PatientExamination</h1>

<h4>PatientExaminationModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="PatientExamination">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PatientID" class="control-label"></label>
                <input asp-for="PatientID" class="form-control" />
                <span asp-validation-for="PatientID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FacilityID" class="control-label"></label>
                <input asp-for="FacilityID" class="form-control" />
                <span asp-validation-for="FacilityID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExaminationID" class="control-label"></label>
                <input asp-for="ExaminationID" class="form-control" />
                <span asp-validation-for="ExaminationID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VisitID" class="control-label"></label>
                <input asp-for="VisitID" class="form-control" />
                <span asp-validation-for="VisitID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Complaint" class="control-label"></label>
                <input asp-for="Complaint" class="form-control" />
                <span asp-validation-for="Complaint" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Diagnosis" class="control-label"></label>
                <input asp-for="Diagnosis" class="form-control" />
                <span asp-validation-for="Diagnosis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prescription" class="control-label"></label>
                <input asp-for="Prescription" class="form-control" />
                <span asp-validation-for="Prescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FollowUp" class="control-label"></label>
                <input asp-for="FollowUp" class="form-control" />
                <span asp-validation-for="FollowUp" class="text-danger"></span>
            </div>
           @*  <div class="form-group">
                <label asp-for="lastUpdatedDate" class="control-label"></label>
                <input asp-for="lastUpdatedDate" class="form-control" />
                <span asp-validation-for="lastUpdatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="lastUpdatedUser" class="control-label"></label>
                <input asp-for="lastUpdatedUser" class="form-control" />
                <span asp-validation-for="lastUpdatedUser" class="text-danger"></span>
            </div> *@

            <h4>Symptoms and Severity</h4>
                <table class="table" id="symptomsTable">
                    <thead>
                        <tr>
                            <th>Symptom</th>
                            <th>Severity</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                     {
                 
                        @foreach (var item in Model.Severity)
                        {
                            <tr>
                                <td><input type="text" class="form-control" name="Symptom" value="@item.Symptoms" asp-for="@item.Symptoms" /></td>
                                <td><input type="text" class="form-control" name="Severity" value="@item.Severity" asp-for="@item.Severity" /></td>
                               
                            </tr>
                        }
                    }

                    </tbody>
                </table>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" asp-action="CreateExm" />
            </div>
            <button type="submit" name="buttonType" value="patientDiagnosis"  class="btn btn-primary">patientDiagnosis</button>
            <button type="submit" name="buttonType" value="patientProcedure" class="btn btn-primary">patientProcedure</button>
        </form>
    </div>
</div>

