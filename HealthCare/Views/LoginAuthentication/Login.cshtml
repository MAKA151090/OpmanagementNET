@model LoginModel

@{
    ViewData["Title"] = "Login";
    Layout = "_BlankLayout";
}

<center>
<h1>Login Screen</h1>

<hr />

<div class="row">
    <div class="col-md-4">
       
        <form asp-controller="LoginAuthentication" asp-action="Login" >

                <div class="form-group" >
                <label asp-for="Email" class="control-label">User Name</label>
                <input type="email" asp-for="Email" class="form-control" />

            </div>

                <div class="form-group" >
                <label asp-for="Password" class="control-label">Password</label>
                <input type="password" asp-for="Password" class="form-control" />
            </div>

                <div class="form-group" >
                <input type="submit" asp-action="Login" value="Login" class="btn btn-primary" />
            </div>
                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-danger">


                        @ViewBag.Message
                    </div>
                }
        </form>
    </div>
</div>

</center>

