@model List<RadiologyViewResultModel>

@{
    ViewData["Title"] = "PrintRadiologyResults";
    Layout = "~/Views/Shared/_ContentNavbarLayout.cshtml";
}
<div class="card xl-8">
    <div class="card-body pt-2 mt-1">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h2 class="text-primary mb-1">PrintRadiologyResults</h2>
            <small class="text-muted float-end"></small>

        </div>
    </div>

@using (Html.BeginForm("GetRadio", "LabRad", FormMethod.Post))
{

   <div class="row gy-4">
                <div class="col-md-12 col-lg-1"></div>
                <div class="col-md-12 col-lg-4">
                    <div class="card">
                        <div class="card-body">

                            <div class="form-floating form-floating-outline mb-4">
                            <input for="PatientID" class="form-control" placeholder="PatientID" />
                <label for="PatientID" class="control-label">PatientID</label>
                
            </div>

                        <div class="form-floating form-floating-outline mb-4">
                            <input for="FacilityID" class="form-control" placeholder="FacilityID" />
                <label for="FacilityID" class="control-label">FacilityID</label>
               
            </div>

                        <div class="form-floating form-floating-outline mb-4">
                            <input for="VisitcaseID" class="form-control" placeholder="VisitcaseID" />
                <label for="VisitcaseID" class="control-label">VisitcaseID</label>
               
            </div>
            <br />
            <center>
            <div class="form-group">
                                <button type="submit" name="buttonType" value="select" class="btn btn-primary">Submit</button>
                        </center>
            </div>
        </div>
    </div>
    </div>
    
    
    
}
<br />

<table class="table">
    <thead>
        <tr>
            <th>
                Patient Name
            </th>
            <th>
                Radio ID
            </th>
            <th>
                Clinic ID
            </th>
            <th>
                RadioName
            </th>
            <th>
                Screening Date
            </th>
            <th>
                Result
            </th>
            <th>
                Referral Doctor Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.PatentName</td>
                    <td>@item.RadioID</td>
                    <td>@item.FacilityID</td>
                    <td>@item.RadioName</td>
                    <td>@item.ScreeningDate</td>
                    <td>@item.Result</td>
                    <td>@item.ReferralDoctorName</td>
                </tr>
            }
        }
    </tbody>
</table>

