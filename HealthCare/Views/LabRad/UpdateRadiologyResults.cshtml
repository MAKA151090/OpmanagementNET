@model HealthCare.Models.UpdateRadiologyResultsModel

@{
    ViewData["Title"] = "UpdateRadiologyResults";
    Layout = "~/Views/Shared/_ContentNavbarLayout.cshtml";
}


<div class="card xl-8">
    <div class="card-body pt-2 mt-1">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h2 class="text-primary mb-1">InPatientDocVisit</h2>
            <small class="text-muted float-end"></small>

        </div>
    </div>
        <form asp-action="UpdateRadiologyResults">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row gy-4">
            <div class="col-md-12 col-lg-4">
                <div class="card">
                    <div class="card-body">

                        <div class="form-floating form-floating-outline mb-4">
                            <input asp-for="PatientID" class="form-control" placeholder="PatientID" />
                <label asp-for="PatientID" class="control-label"></label>
               
                <span asp-validation-for="PatientID" class="text-danger"></span>
            </div>
                        <div class="form-floating form-floating-outline mb-4">
                            <input asp-for="FacilityID" class="form-control" placeholder="FacilityID" />
                <label asp-for="FacilityID" class="control-label"></label>
               
                <span asp-validation-for="FacilityID" class="text-danger"></span>
            </div>
                        <div class="form-floating form-floating-outline mb-4">
                            <input asp-for="RadioID" class="form-control" placeholder="RadioID" />
                <label asp-for="RadioID" class="control-label"></label>
                
                <span asp-validation-for="RadioID" class="text-danger"></span>
            </div>


                        <div class="form-floating form-floating-outline mb-4">
                            <input asp-for="ImageID" class="form-control" placeholder="ImageID" />
                <label asp-for="ImageID" class="control-label"></label>
               
                <span asp-validation-for="ImageID" class="text-danger"></span>
            </div>
                        <div class="form-floating form-floating-outline mb-4">
                            <input asp-for="ImageData" class="form-control" placeholder="ImageData" />
                <label asp-for="ImageData" class="control-label"></label>
               
                <span asp-validation-for="ImageData" class="text-danger"></span>
            </div>

           @*  <div class="form-group">
                <label asp-for="lastUpdatedDate" class="control-label"></label>
                <input asp-for="lastUpdatedDate" class="form-control" />
                <span asp-validation-for="lastUpdatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="lastUpdatedUser" class="control-label"></label>
                <input asp-for="lastUpdatedUser" class="form-control" />
                <span asp-validation-for="lastUpdatedUser" class="text-danger"></span>
            </div> *@
            <div class="form-group">
                <input type="file" name="ImageData" id="ImageData" class="form-control" />
            </div>





            <div class="form-group">
                <input type="submit" value="Create" asp-action="TestRadiologyResult" class="btn btn-primary" />
            </div>

            @if (ViewBag.Message != null)
            {
                <div class="alert alert-success">
                    @ViewBag.Message
                </div>
            }
        </form>
    </div>
</div>



