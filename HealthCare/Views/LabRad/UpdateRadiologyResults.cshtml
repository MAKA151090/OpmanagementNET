@model HealthCare.Models.UpdateRadiologyResultsModel

@{
    ViewData["Title"] = "UpdateRadiologyResults";
    Layout = "~/Views/Shared/_ContentNavbarLayout.cshtml";
}

<div class="row">
    <div class="col-md-12 col-lg-2">
    </div>
    <div class="col-md-12 col-lg-6">
        <div class="card">
            <div class="card-body " style="background-color:#8c62c9">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div class="container">
                        <h2 class="centered text-white" style="font-family:'Lucida Bright'">UpdateRadiologyResults</h2>

                    </div>
                </div>
            </div>
        </div   
    </div>
</div>

<div class="row" style="margin-top:20px">
</div>

        <form asp-action="UpdateRadiologyResults" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row gy-4">
        <div class="col-md-12 col-lg-2">
        </div>
        <div class="col-md-12 col-lg-6">
            <div class="card">
                <div class="card-body " style="background-image: linear-gradient(to right, #FFFFFF 0%, #FFFFFF 51%, #ece5f6 100%);">


                        <div class="form-floating form-floating-outline mb-4">
                            @{
                                var updpatid = ((IEnumerable<PatientRegistrationModel>)ViewData["updpatid"])
                                .Select(m => new SelectListItem
            {
                Value = m.PatientID.ToString(), // Assuming ScreenId is of type int
                Text = $"{m.PatientID} - {m.FullName}"
            });
                            }

                            @Html.DropDownListFor(model => model.PatientID, updpatid, "Select Patient ID", new { @class = "form-control", required = "required" })
                            <label asp-for="PatientID" class="control-label"></label>
                            <span asp-validation-for="PatientID" class="text-danger"></span>
                        </div>

                        <div class="form-floating form-floating-outline mb-4">
                            @{
                                var updfacid = ((IEnumerable<ClinicAdminModel>)ViewData["updfacid"])
                                .Select(m => new SelectListItem
            {
                Value = m.FacilityID.ToString(), // Assuming ScreenId is of type int
                Text = $"{m.FacilityID} - {m.ClinicName}"
            });
                            }

                            @Html.DropDownListFor(model => model.FacilityID, updfacid, "Select Facility ID", new { @class = "form-control", required = "required" })
                            <label asp-for="FacilityID" class="control-label"></label>
                            <span asp-validation-for="FacilityID" class="text-danger"></span>
                        </div>




                        <div class="form-floating form-floating-outline mb-4">
                            @{
                                var updradid = ((IEnumerable<RadiologyMasterModel>)ViewData["updradid"])
                                .Select(m => new SelectListItem
            {
                Value = m.RadioID.ToString(), // Assuming ScreenId is of type int
                Text = $"{m.RadioID} - {m.RadioName}"
            });
                            }

                            @Html.DropDownListFor(model => model.RadioID, updradid, "Select Radiology ID", new { @class = "form-control", required = "required" })
                            <label asp-for="RadioID" class="control-label"></label>
                            <span asp-validation-for="RadioID" class="text-danger"></span>
                        </div>


                        <div class="form-floating form-floating-outline mb-4">
                            <input asp-for="ImageID" class="form-control" placeholder="ImageID" required />
                <label asp-for="ImageID" class="control-label"></label>
               
                <span asp-validation-for="ImageID" class="text-danger"></span>
            </div>
                        <div class="form-floating form-floating-outline mb-4">
                            <input asp-for="ImageData" class="form-control" placeholder="ImageData" required />
                <label asp-for="ImageData" class="control-label"></label>
               
                <span asp-validation-for="ImageData" class="text-danger"></span>
            </div>

           @*  <div class="form-group">
                <label asp-for="lastUpdatedDate" class="control-label"></label>
                <input asp-for="lastUpdatedDate" class="form-control" />
                <span asp-validation-for="lastUpdatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="lastUpdatedUser" class="control-label"></label>
                <input asp-for="lastUpdatedUser" class="form-control" />
                <span asp-validation-for="lastUpdatedUser" class="text-danger"></span>
            </div> *@
                        <div>
                            <label>Upload Image:</label>
                            <input type="file" name="imageFile" required/>
                        </div>



            <br />

                </div>
            </div>

            <div class="col-md-12 col-lg-1" style="height=10%">
                <div class="form-floating form-floating-outline mb-4">
                </div>
            </div>
            <div class="form-group">
                <center>
                    <button type="submit" name="buttontype" value="Create" asp-action="TestRadiologyResult" class="btn btn-primary">Save</button>
                    <button type="submit" name="buttontype" value="Download" asp-action="TestRadiologyResult" class="btn btn-primary">Download</button>

                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-success">


                            @ViewBag.Message
                        </div>
                    }
                </center>
            </div>
        </div>

        <div class="col-md-12 col-lg-4">
        </div>
    </div>


           
           
                       
        </form>
    



