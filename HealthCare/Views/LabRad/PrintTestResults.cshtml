@model List<PatientViewResultModel>

@{
    ViewData["Title"] = "PrintTestResults";
    Layout = "~/Views/Shared/_ContentNavbarLayout.cshtml";
}

<div class="card xl-8">
    <div class="card-body pt-2 mt-1">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h2 class="text-primary mb-1">PrintTestResults</h2>
            <small class="text-muted float-end"></small>

        </div>
    </div>

@using (Html.BeginForm("ViewResult", "LabRad", FormMethod.Post))
{
    
            <form asp-action="PrintTestResults">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row gy-4">
                <div class="col-md-12 col-lg-1">
                </div>
                <div class="col-md-12 col-lg-4">
                    <div class="card">
                        <div class="card-body">

                            <div class="form-floating form-floating-outline mb-4">
                                <input type="text" id="PatientID" name="PatientID" class="form-control" placeholder="PatientID" />
                    <label for="PatientID" class="control-label">Patient ID</label>
                    
                </div>

                            <div class="form-floating form-floating-outline mb-4">
                                <input type="text" id="FacilityID" name="FacilityID" class="form-control" placeholder="FacilityID" />
                    <label for="FacilityID" class="control-label">Clinic ID</label>
                    
                </div>

                            <div class="form-floating form-floating-outline mb-4">
                                <input type="text" id="VisitcaseID" name="VisitcaseID" class="form-control" placeholder="VisitcaseID" />
                    <label for="VisitcaseID" class="control-label">VisitcaseID</label>
                   
                </div>
                <br />

                <div class="form-group">
                    <center>
                    <button type="submit" value="GetReport" class="btn btn-primary">GetReport</button>
                                </center>
                </div>
                </div>
                </div>
                </div>
                </div>
               
            </form>
        

            <br />
            

<table class="table">
    <thead>
        <tr>
            <th>
                Patient Name
            </th>
            <th>
                Test ID
            </th>
            <th>
                Test Name
            </th>
            <th>
                Result
            </th>
            <th>
                Range
            </th>
            <th>
                Test Date
            </th>
            <th>
                Doctor Name
            </th>
            <th>
                ClinicName
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @if (Model !=null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.PatientName</td>
                    <td>@item.TestID</td>
                    <td>@item.TestName</td>
                    <td>@item.Result</td>
                    <td>@item.Range</td>
                    <td>@item.TestDate</td>
                    <td>@item.DoctorName</td>
                    <td>@item.ClinicName</td>
                </tr>
            }            
        }
            </tbody>
            </table>
    @if (Model != null)
    {
      <div class="form-group">
        <input type="submit" value="Print" class="btn btn-primary" />
      </div>
    }
}
        


