@model HealthCare.Models.EmployeeHierarchymaster

@{
    ViewData["Title"] = "EmployeeHierarchymaster";
    Layout = "~/Views/Shared/_ContentNavbarLayout.cshtml";
}


        @using (Html.BeginForm("GetHierarchy","HRManagement", FormMethod.Post))
        {
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
         
                                  
<div class="row">
    <div class="col-md-12 col-lg-2">
    </div>
    <div class="col-md-12 col-lg-8">
        <div class="card">
            <div class="card-body " style="background-color:#8c62c9">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div class="container">
                                    <h2 class="centered text-white" style="font-family:'Lucida Bright'">EmployeeHierarchymaster</h2>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<br />

<div class="row" style="height:8%">
</div>

<div class="row gy-4">
    <div class="col-md-12 col-lg-2">
    </div>
    <div class="col-md-12 col-lg-8">
        <div class="card">
            <div class="card-body " style="background-image: linear-gradient(to right, #FFFFFF 0%, #FFFFFF 51%, #ece5f6 100%);">

            <div class="form-floating form-floating-outline mb-4">
                @{
                    var screenlist = ((IEnumerable<StaffAdminModel>)ViewData["docid"])
                    .Select(m => new SelectListItem
            {
                Value = m.StrStaffID.ToString(), // Assuming ScreenId is of type int
                Text = $"{m.StrStaffID} - {m.StrFullName}"
            });
                }

                @Html.DropDownListFor(model => model.EmpStaffID, screenlist, "Select Doctor ID", new { @class = "form-control" })
                <label asp-for="EmpStaffID" class="control-label">Employee ID</label>

            </div>

            <div class="form-floating form-floating-outline mb-4">
                @{
                    var screenmgr = ((IEnumerable<StaffAdminModel>)ViewData["docid"])
                    .Select(m => new SelectListItem
            {
                Value = m.StrStaffID.ToString(), // Assuming ScreenId is of type int
                Text = $"{m.StrStaffID} - {m.StrFullName}"
            });
                }

                @Html.DropDownListFor(model => model.MgrStaffID, screenmgr, "Select Doctor ID", new { @class = "form-control" })
                <label asp-for="MgrStaffID" class="control-label">Manager ID</label>

            </div>

            <div class="form-floating form-floating-outline mb-4">
                <input asp-for="ExpiryDate" class="form-control" type="date" placeholder="Date" />
                <label asp-for="ExpiryDate" class="control-label"></label>
                <span asp-validation-for="ExpiryDate" class="text-danger"></span>
            </div>

                    <br />
                </div>
            </div>
        </div>
        <div class="col-md-12 col-lg-2">
        </div>
    </div>
    <br />
    <div class="form-group">
        <center>

            <button type="submit" style="width:180px" value="Save" class="btn btn-primary">Save</button>

            @if (ViewBag.Message != null)
            {
                <div class="alert alert-success">
                    @ViewBag.Message
                </div>
            }
        </center>
    </div>

}