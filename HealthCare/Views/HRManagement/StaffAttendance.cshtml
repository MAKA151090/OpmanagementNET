@model StaffAttendanceModel

@{
    ViewData["Title"] = "StaffAttendance";
    Layout = "~/Views/Shared/_ContentNavbarLayout.cshtml";
}



   
  @using (Html.BeginForm("GetAttendance","HRManagement", FormMethod.Post))
        {
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


<div class="row">
    <div class="col-md-12 col-lg-2">
    </div>
    <div class="col-md-12 col-lg-8">
        <div class="card">
            <div class="card-body " style="background-color:#8c62c9">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div class="container">
                        <h2 class="centered text-white" style="font-family:'Lucida Bright'">Staff Attendance</h2>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<br />

<div class="row" style="height:8%">
</div>

<div class="row gy-4">
    <div class="col-md-12 col-lg-2">
    </div>
    <div class="col-md-12 col-lg-8">
        <div class="card">
            <div class="card-body " style="background-image: linear-gradient(to right, #FFFFFF 0%, #FFFFFF 51%, #ece5f6 100%);">



             <div class="form-floating form-floating-outline mb-4">
                <input asp-for="AttendanceID" class="form-control" placeholder="Attendance ID" required />
                <label asp-for="AttendanceID" class="control-label">Attendance ID</label>
                <span asp-validation-for="AttendanceID" class="text-danger"></span>
            </div>


            <div class="form-floating form-floating-outline mb-4">
                @{
                    var screenlist = ((IEnumerable<StaffAdminModel>)ViewData["docid"])
                    .Select(m => new SelectListItem
            {
                Value = m.StrStaffID.ToString(), // Assuming ScreenId is of type int
                Text = $"{m.StrStaffID} - {m.StrFullName}"
            });
                }

                @Html.DropDownListFor(model => model.StaffID, screenlist, "Select Doctor ID", new { @class = "form-control",@required="required" })
                <label asp-for="StaffID" class="control-label">Staff ID</label>

            </div>
            <div class="form-floating form-floating-outline mb-4">
                <input asp-for="CheckInTime" class="form-control" type="time" placeholder="CheckInTime" />
                <label asp-for="CheckInTime" class="control-label"></label>
                <span asp-validation-for="CheckInTime" class="text-danger"></span>
            </div>
            <div class="form-floating form-floating-outline mb-4">
                <input asp-for="CheckOuTtime" class="form-control" type="time" placeholder="CheckOuTtime" />
                <label asp-for="CheckOuTtime" class="control-label"></label>
                <span asp-validation-for="CheckOuTtime" class="text-danger"></span>
            </div>
            
            <div class="form-floating form-floating-outline mb-4">
                <input type="date" id="Date" name="Date" class="form-control" placeholder="Date" required />

                <label for="Date" class="control-label">Date</label>
            </div>


            <div class="form-floating form-floating-outline mb-4">
                <input asp-for="Status" class="form-control" placeholder="Status" />
                <label asp-for="Status" class="control-label"></label>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            
                    <br />


                </div>
            </div>


        </div>


        <div class="col-md-12 col-lg-2">
        </div>
    </div>
    <br />
    <div class="form-group">
        <center>

            <button type="submit" style="width:180px" value="Save" class="btn btn-primary">Save</button>

            @if (ViewBag.Message != null)
            {
                <div class="alert alert-success">
                    @ViewBag.Message
                </div>
            }
        </center>
    </div>

}