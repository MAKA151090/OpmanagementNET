@model HealthCare.Models.LeaveTypeMaster

@{
    ViewData["Title"] = "LeaveTypeMaster";
    Layout = "~/Views/Shared/_ContentNavbarLayout.cshtml";
}

<h1>LeaveTypeMaster</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("GetStaffLeaveMaster", "HRManagement", FormMethod.Post))
        {
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating form-floating-outline mb-4">
                @{
                    var screenlist = ((IEnumerable<StaffAdminModel>)ViewData["docid"])
                    .Select(m => new SelectListItem
            {
                Value = m.StrStaffID.ToString(), // Assuming ScreenId is of type int
                Text = $"{m.StrStaffID} - {m.StrFullName}"
            });
                }

                @Html.DropDownListFor(model => model.StaffID, screenlist, "Select Doctor ID", new { @class = "form-control" })
                <label asp-for="StaffID" class="control-label">Staff ID</label>

            </div>
            <div class="form-floating form-floating-outline mb-4">
                <input asp-for="LeaveType" class="form-control" />
                <label asp-for="LeaveType" class="control-label"></label>
                <span asp-validation-for="LeaveType" class="text-danger"></span>
            </div>
            <div class="form-floating form-floating-outline mb-4">
                 <input asp-for="Total" class="form-control" />
                <label asp-for="Total" class="control-label"></label>
                <span asp-validation-for="Total" class="text-danger"></span>
            </div>
            <div class="form-floating form-floating-outline mb-4">
                <input asp-for="Balance" class="form-control" />
                <label asp-for="Balance" class="control-label"></label>
                <span asp-validation-for="Balance" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>

            @if (ViewBag.Message != null)
            {
                <div class="alert alert-success">
                    @ViewBag.Message
                </div>
            }
        }
    </div>
</div>

