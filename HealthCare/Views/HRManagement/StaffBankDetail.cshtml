@model HealthCare.Models.StaffBankDetailsModel

@{
    ViewData["Title"] = "StaffBankDetail";
    Layout = "~/Views/Shared/_ContentNavbarLayout.cshtml";
}


@using (Html.BeginForm("GetStaffBank", "HRManagement", FormMethod.Post))
{


    <div asp-validation-summary="ModelOnly" class="text-danger"></div>


    <div class="row">
        <div class="col-md-12 col-lg-2">
        </div>
        <div class="col-md-12 col-lg-8">
            <div class="card">
                <div class="card-body " style="background-color:#8c62c9">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <div class="container">
                            <h2 class="centered text-white" style="font-family:'Lucida Bright'">Staff Bank Detail</h2>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <br />

    <div class="row" style="height:8%">
    </div>

    <div class="row gy-4">
        <div class="col-md-12 col-lg-2">
        </div>
        <div class="col-md-12 col-lg-8">
            <div class="card">
                <div class="card-body " style="background-image: linear-gradient(to right, #FFFFFF 0%, #FFFFFF 51%, #ece5f6 100%);">


                    <div class="form-floating form-floating-outline mb-4">
                        @{
                            var screenlist = ((IEnumerable<StaffAdminModel>)ViewData["docid"])
                            .Select(m => new SelectListItem
                {
                    Value = m.StrStaffID.ToString(), // Assuming ScreenId is of type int
                    Text = $"{m.StrStaffID} - {m.StrFullName}"
                });
                        }

                        @Html.DropDownListFor(model => model.StaffID, screenlist, "Select Staff ID", new { @class = "form-control" ,@required="required" })
                        <label asp-for="StaffID" class="control-label">Staff ID</label>

                    </div>

                   

                    <div class="form-floating form-floating-outline mb-4">
                        <input asp-for="BankName" class="form-control" placeholder="Bank Name" />
                        <label asp-for="BankName" class="control-label">Bank Name</label>
                        <span asp-validation-for="BankName" class="text-danger"></span>
                    </div>
                    <div class="form-floating form-floating-outline mb-4">
                        <input asp-for="AccountNumber" class="form-control" required  placeholder="Accoount Number"/>
                        <label asp-for="AccountNumber" class="control-label">Account Number</label>
                        <span asp-validation-for="AccountNumber" class="text-danger"></span>
                    </div>
                    <div class="form-floating form-floating-outline mb-4">
                        <input asp-for="IFSCCode" class="form-control" placeholder="IFSC Code" />
                        <label asp-for="IFSCCode" class="control-label">IFSC Code</label>
                        <span asp-validation-for="IFSCCode" class="text-danger"></span>
                    </div>

                    <div class="form-floating form-floating-outline mb-4">
                        <input asp-for="Primary" class="form-control" placeholder="Primary" />
                        <label asp-for="Primary" class="control-label">Primary</label>
                        <span asp-validation-for="Primary" class="text-danger"></span>
                    </div>

                    <br />
                </div>
            </div>
        </div>
        <div class="col-md-12 col-lg-2">
        </div>
    </div>
    <br />
    <div class="form-group">
        <center>

            <button type="submit" style="width:180px" value="Save" class="btn btn-primary">Save</button>

            @if (ViewBag.Message != null)
            {
                <div class="alert alert-success">
                    @ViewBag.Message
                </div>
            }
        </center>
    </div>

}

