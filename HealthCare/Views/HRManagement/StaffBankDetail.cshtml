@model HealthCare.Models.StaffBankDetailsModel

@{
    ViewData["Title"] = "StaffBankDetail";
    Layout = "~/Views/Shared/_ContentNavbarLayout.cshtml";
}

<h1>StaffBankDetail</h1>

<h4>StaffBankDetailsModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("GetStaffBank", "HRManagement", FormMethod.Post))
        {
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating form-floating-outline mb-4">
                @{
                    var screenlist = ((IEnumerable<StaffAdminModel>)ViewData["docid"])
                    .Select(m => new SelectListItem
                {
                    Value = m.StrStaffID.ToString(), // Assuming ScreenId is of type int
                    Text = $"{m.StrStaffID} - {m.StrFullName}"
                });
                }

                @Html.DropDownListFor(model => model.StaffID, screenlist, "Select Staff ID", new { @class = "form-control" })
                <label asp-for="StaffID" class="control-label">Employee ID</label>

            </div>

            <div class="form-floating form-floating-outline mb-4">
                @{
                    var screenname = ((IEnumerable<StaffAdminModel>)ViewData["docid"])
                    .Select(m => new SelectListItem
                {
                    Value = m.StrStaffID.ToString(), // Assuming ScreenId is of type int
                    Text = $"{m.StrStaffID} - {m.StrFullName}"
                });
                }

                @Html.DropDownListFor(model => model.StaffName, screenlist, "Select Doctor ID", new { @class = "form-control" })
                <label asp-for="StaffName" class="control-label">Employee ID</label>

            </div>

            <div class="form-floating form-floating-outline mb-4">
                <input asp-for="BankName" class="form-control" />
                <label asp-for="BankName" class="control-label">Bank Name</label>
                <span asp-validation-for="BankName" class="text-danger"></span>
            </div>
            <div class="form-floating form-floating-outline mb-4">
                <input asp-for="AccountNumber" class="form-control" />
                <label asp-for="AccountNumber" class="control-label">Bank Name</label>
                <span asp-validation-for="AccountNumber" class="text-danger"></span>
            </div>
            <div class="form-floating form-floating-outline mb-4">
                <input asp-for="IFSCCode" class="form-control" />
                <label asp-for="IFSCCode" class="control-label">IFSC Code</label>
                <span asp-validation-for="IFSCCode" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        }
    </div>
</div>
