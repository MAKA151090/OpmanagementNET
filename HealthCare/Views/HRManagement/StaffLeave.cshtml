@model HealthCare.Models.StaffLeaveModel

@{
    ViewData["Title"] = "StaffLeave";
    Layout = "~/Views/Shared/_ContentNavbarLayout.cshtml";
}

        @using (Html.BeginForm("GetStaffLeave", "HRManagement", FormMethod.Post))
        {
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>



            
<div class="row">
    <div class="col-md-12 col-lg-2">
    </div>
    <div class="col-md-12 col-lg-8">
        <div class="card">
            <div class="card-body " style="background-color:#8c62c9">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div class="container">
                                    <h2 class="centered text-white" style="font-family:'Lucida Bright'">Staff Leave</h2>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<br />

<div class="row" style="height:8%">
</div>

<div class="row gy-4">
    <div class="col-md-12 col-lg-2">
    </div>
    <div class="col-md-12 col-lg-8">
        <div class="card">
            <div class="card-body " style="background-image: linear-gradient(to right, #FFFFFF 0%, #FFFFFF 51%, #ece5f6 100%);">


            <div class="form-floating form-floating-outline mb-4">
                @{
                    var screenlist = ((IEnumerable<StaffAdminModel>)ViewData["docid"])
                    .Select(m => new SelectListItem
            {
                Value = m.StrStaffID.ToString(), // Assuming ScreenId is of type int
                Text = $"{m.StrStaffID} - {m.StrFullName}"
            });
                }

                @Html.DropDownListFor(model => model.StaffID, screenlist, "Select Doctor ID", new { @class = "form-control",@required="required" })
                <label asp-for="StaffID" class="control-label">Staff ID</label>

            </div>
            <div class="form-floating form-floating-outline mb-4">
                <input asp-for="LeaveID" class="form-control" placeholder="Leave ID" required />
                        <label asp-for="LeaveID" class="control-label">Leave ID</label>
                <span asp-validation-for="LeaveID" class="text-danger"></span>
            </div>

            <div class="form-floating form-floating-outline mb-4">
                @{
                    var Leavelist = ((IEnumerable<LeaveTypeMaster>)ViewData["levId"])
                    .Select(m => new SelectListItem
            {
                Value = m.LeaveType.ToString(), // Assuming ScreenId is of type int
                Text = $"{m.LeaveType}"
            });
                }

                        @Html.DropDownListFor(model => model.LeaveType, Leavelist, "Select Leave Type", new { @class = "form-control", @required = "required" })
                <label asp-for="LeaveType" class="control-label">Leave Type</label>

            </div>

            <div class="form-floating form-floating-outline mb-4">
                <input asp-for="StartDate" class="form-control" type="date" placeholder="Start Date" />
                        <label asp-for="StartDate" class="control-label">Start Date</label>
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-floating form-floating-outline mb-4">
                <input asp-for="NoOfDays" class="form-control" placeholder="No Of Days" />
                        <label asp-for="NoOfDays" class="control-label">No Of Days</label>
                <span asp-validation-for="NoOfDays" class="text-danger"></span>
            </div>
            <div class="form-floating form-floating-outline mb-4">
                <input asp-for="ApprovalStatus" class="form-control" placeholder="Approval Status" />
                        <label asp-for="ApprovalStatus" class="control-label">Approval Status</label>
                <span asp-validation-for="ApprovalStatus" class="text-danger"></span>
            </div>
            <div class="form-floating form-floating-outline mb-4">
                <input asp-for="AppliedDate" class="form-control" type="date" placeholder="Applied Date" />
                        <label asp-for="AppliedDate" class="control-label">Applied Date</label>
                <span asp-validation-for="AppliedDate" class="text-danger"></span>
            </div>


                    <br />


                </div>
            </div>


        </div>


        <div class="col-md-12 col-lg-2">
        </div>
    </div>
    <br />
    <div class="form-group">
        <center>

            <button type="submit" style="width:180px" value="Save" class="btn btn-primary">Save</button>

            @if (ViewBag.Message != null)
            {
                <div class="alert alert-success">
                    @ViewBag.Message
                </div>
            }
        </center>
    </div>

}
           