@model List<ResourceScheduleModel>

@{
    ViewData["Title"] = "DoctorSchedule";
    Layout = "~/Views/Shared/_ContentNavbarLayout.cshtml";
}

<h1>DoctorSchedule</h1>
@using (Html.BeginForm("SaveSlots", "ClinicAdministration", FormMethod.Post))
{
    <hr />
 
            <div class="row">
                <div class="col-md-4">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                       <label for="StaffID" class="control-label">StaffID</label>
                <input type="StaffID" class="form-control" id="StaffID"  name="models[0].StaffID" />
                       
                    </div>
            <div class="form-group">
                <label for="FacilityID" class="control-label">FacilityID</label>
                <input type="FacilityID" class="form-control" id="FacilityID" name="models[0].FacilityID" />

            </div>
            <div class="form-group">
                <label for="Duration" class="control-label">Duration</label>
                <input type="Duration" class="form-control" id="Duration" name="models[0].Duration" />

            </div>
            <div class="form-group">
                <label for="FromDate" class="control-label">FromDate</label>
                <input type="date" class="form-control" id="FromDate" name="models[0].FromDate" />
            </div>

            <div class="form-group">
                <label for="ToDate" class="control-label">ToDate</label>
                <input type="date" class="form-control" id="ToDate" name="models[0].ToDate" />
            </div>
                   
                </div>
            </div>
        
    <div class="form-group">
        <input type="submit" value="Add Slot" class="btn btn-primary" />
    </div>

}


<div id="slotsTable">
    <h3>Slots</h3>
    <table id="SlotTable" class="table">
        <thead>
            <tr>
                <th>From Time</th>
                <th>To Time</th>
            </tr>
        </thead>
        <tbody>
            @if (ViewBag.Slots != null)
            {
                @foreach (var slot in ViewBag.Slots)
                {
                    <tr>
                        <td><input type="text" class="form-control" name="FromTime" value="@slot.FromTime" /></td>
                        <td><input type="text" class="form-control" name="ToTime" value="@slot.ToTime" /></td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
    <div class="form-group">
        <input type="submit" value="Holiday" class="btn btn-primary" />
    </div>
    <div class="form-group">
        <input type="submit" value="Blocker" class="btn btn-primary" />
    </div>

    


