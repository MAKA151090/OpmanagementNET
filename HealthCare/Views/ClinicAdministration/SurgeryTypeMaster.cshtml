@model HealthCare.Models.SurgeryTypeMasterModel

@{
    ViewData["Title"] = "SurgeryTypeMasterModel";
    Layout = "~/Views/Shared/_ContentNavbarLayout.cshtml";
}
@section PageStyles {
    <link rel="stylesheet" href="~/vendor/css/pages/page-auth.css">
}



<form>
<div class="row">
    <div class="col-md-12 col-lg-2">
    </div>
    <div class="col-md-12 col-lg-8">
        <div class="card">
            <div class="card-body " style="background-color:#8c62c9">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div class="container">
                            <h2 class="centered text-white" style="font-family:'Lucida Bright'">SurgeryTypeMaster</h2>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<br />

<div class="row" style="height:8%">
</div>

<div class="row gy-4">
    <div class="col-md-12 col-lg-2">
    </div>
    <div class="col-md-12 col-lg-8">
        <div class="card">
            <div class="card-body " style="background-image: linear-gradient(to right, #FFFFFF 0%, #FFFFFF 51%, #ece5f6 100%);">
                        <div class="form-floating form-floating-outline mb-4">

                            <input asp-for="SurgeryTypeID" class="form-control" placeholder="SurgeryTypeID" />
                <label asp-for="SurgeryTypeID" class="control-label"></label>
                <span asp-validation-for="SurgeryTypeID" class="text-danger"></span>
            </div>
                        <div class="form-floating form-floating-outline mb-4">

                            <input asp-for="SurgeryTypeName" class="form-control" placeholder="SurgeryTypeName" />
                <label asp-for="SurgeryTypeName" class="control-label"></label>
                <span asp-validation-for="SurgeryTypeName" class="text-danger"></span>
            </div>


                    <br />
                </div>
            </div>
        </div>
        <div class="col-md-12 col-lg-2">
        </div>
    </div>
    <br />
    <div class="form-group">
        <center>
            <button type="submit" style="width:180px" asp-action="GetSurgeryTypeMaster" value="Create" class="btn btn-primary">Save</button>


            @if (ViewBag.Message != null)
            {
                <div class="alert alert-success">
                    @ViewBag.Message
                </div>
            }
        </center>
    </div>
</form>


           