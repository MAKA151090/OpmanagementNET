@model HealthCare.Models.ScreenMasterModel

@{
    ViewData["Title"] = "ScreenMaster";
    Layout = "~/Views/Shared/_ContentNavbarLayout.cshtml";
}




@section PageStyles {
    <link rel="stylesheet" href="~/vendor/css/pages/page-auth.css">
}

<div class="row">

    <div class="col-md-12 col-lg-7 ">
        <div class="card">
            <div class="card-body ">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div class="container">
                        <h2 class="centered text-primary mb-1">Screen Master</h2>

                    </div>
                </div>
            </div>
        </div>

        <div class="row" style="height:8%">
        </div>
        <div class="row">

            <div class="col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="form-floating form-floating-outline mb-4">

                            <input asp-for="ScreenId" class="form-control" placeholder="ScreenId" />
                            <label asp-for="ScreenId" class="control-label"></label>
                            <span asp-validation-for="ScreenId" class="text-danger"></span>
                        </div>
                        <div class="form-floating form-floating-outline mb-4">

                            <input asp-for="ScreenName" class="form-control" placeholder="ScreenName" />
                            <label asp-for="ScreenName" class="control-label"></label>
                            <span asp-validation-for="ScreenName" class="text-danger"></span>
                        </div>
                        <div class="form-floating form-floating-outline mb-4">

                        <div class="form-group">
                            <label class="control-label">ReadWriteAccess:</label><br />
                            <div class="form-check form-check-inline">
                                <input asp-for="ReadWriteAccess" class="form-check-input" type="radio" value="R" id="ReadRadio" />
                                <label class="form-check-label" for="ReadRadio">Read</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input asp-for="ReadWriteAccess" class="form-check-input" type="radio" value="W" id="WriteRadio" />
                                <label class="form-check-label" for="WriteRadio">Write</label>
                            </div>
                            <span asp-validation-for="ReadWriteAccess" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label class="control-label">Authorized:</label><br />
                            <div class="form-check form-check-inline">
                                <input asp-for="Authorized" class="form-check-input" type="radio" value="1" id="YesRadio" />
                                <label class="form-check-label" for="YesRadio">Yes</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input asp-for="Authorized" class="form-check-input" type="radio" value="0" id="NoRadio" />
                                <label class="form-check-label" for="NORadio">NO</label>
                            </div>
                            <span asp-validation-for="Authorized" class="text-danger"></span>
                        </div>
                        </div>

                    </div>

                </div>

                <div class="row" style="height:12%">
                </div>
                <div class="row">

                    <div class="col-md-12 col-lg-12">

                        <div class="form-group">
                            <div class="container">
                   
                                <button type="submit" style="centered" asp-action="GetScreenMaster" value="Save" class="btn btn-primary">Save</button>
                                @if (ViewBag.Message != null)
                                {
                                    <div class="alert alert-success">
                                        @ViewBag.Message
                                    </div>
                                }
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
        </div>
    </div>
    <div class="col-md-12 col-lg-5">
        <div class="form-floating form-floating-outline mb-4">
            <img src="~/img/illustrations/Doc.png" class="authentication-image d-none d-lg-block" data-app-light-img="illustrations/auth-basic-mask-light.png" data-app-dark-img="illustrations/auth-basic-mask-dark.png">
        </div>
    </div>
</div>



                      
