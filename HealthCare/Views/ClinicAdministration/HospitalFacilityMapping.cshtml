@model HealthCare.Models.HospitalFacilityMappingModel

@{
    ViewData["Title"] = "HospitalFacilityMapping";
    Layout = "~/Views/Shared/_ContentNavbarLayout.cshtml";
}


@section PageStyles {
    <link rel="stylesheet" href="~/vendor/css/pages/page-auth.css">
}
<div class="row">

    <div class="col-md-12 col-lg-7 ">
        <div class="card">
            <div class="card-body ">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div class="container">
                        <h2 class="centered text-primary mb-1">HospitalFacilityMapping</h2>

                    </div>
                </div>
            </div>
        </div>

        <div class="row" style="height:8%">
        </div>
        <div class="row">

            <div class="col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-body">

                        <div class="form-floating form-floating-outline mb-4">
                 <input asp-for="HospitalID" class="form-control" placeholder="HospitalID" />
                <label asp-for="HospitalID" class="control-label" ></label>
                <span asp-validation-for="HospitalID" class="text-danger"></span>
            </div>
                        <div class="form-floating form-floating-outline mb-4">

                <input asp-for="FacilityID" class="form-control" placeholder="FacilityID" />
                <label asp-for="FacilityID" class="control-label"></label>
                <span asp-validation-for="FacilityID" class="text-danger"></span>
            </div>  
            <div class="form-group">
                <label class="control-label">FacilityStatus:</label><br />
                <div class="form-check form-check-inline">
                    <input asp-for="FacilityStatus" class="form-check-input" type="radio" value="Active" id="ActiveRadio" />
                    <label class="form-check-label" for="ActiveRadio">Active</label>
                </div>
                <div class="form-check form-check-inline">
                    <input asp-for="FacilityStatus" class="form-check-input" type="radio" value="InActive" id="InActiveRadio" />
                    <label class="form-check-label" for="InActiveRadio">InActive</label>
                   
                </div>
                <span asp-validation-for="FacilityStatus" class="text-danger"></span>
               
            </div>

                    </div>

                </div>

                <div class="row" style="height:12%">
                </div>
                <div class="row">

                    <div class="col-md-12 col-lg-12">

                        <div class="form-group">
                            <div class="container">
                                <button type="submit" style="centered" asp-action="GetHospitalFacilityMapping" value="Save" class="btn btn-primary">Save</button>

                            
                                @if (ViewBag.Message != null)
                                {
                                    <div class="alert alert-success">
                                        @ViewBag.Message
                                    </div>
                                }
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
        </div>
    </div>
    <div class="col-md-12 col-lg-5">
        <div class="form-floating form-floating-outline mb-4">
            <img src="~/img/illustrations/Doc.png" class="authentication-image d-none d-lg-block" data-app-light-img="illustrations/auth-basic-mask-light.png" data-app-dark-img="illustrations/auth-basic-mask-dark.png">
        </div>
    </div>
</div>

