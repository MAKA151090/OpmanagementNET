@model HealthCare.Models.HospitalFacilityMappingModel

@{
    ViewData["Title"] = "HospitalFacilityMapping";
    Layout = "~/Views/Shared/_ContentNavbarLayout.cshtml";
}


@section PageStyles {
    <link rel="stylesheet" href="~/vendor/css/pages/page-auth.css">
}


<div class="row" style="margin-top:70px">
    <div class="col-md-12 col-lg-3 ">
    </div>

    <div class="col-md-12 col-lg-6 ">
        <div class="card">
            <div class="card-body " style="background-color:#8c62c9">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div class="container">
                        <h2 class="centered text-white" style="font-family:'Lucida Bright'">HospitalFacilityMapping</h2>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="row" style="height:5%">
</div>



<br />

<div class="row">
    <div class="col-md-12 col-lg-3">
    </div>
    <div class="col-md-12 col-lg-6">
        <div class="card">
            <div class="card-body " style="background-image: linear-gradient(to right, #FFFFFF 0%, #FFFFFF 51%, #ece5f6 100%);">



                <div class="form-floating form-floating-outline mb-4">
                    @{
                        var screenList = ((IEnumerable<HospitalRegistrationModel>)ViewData["hospitalid"])
                        .Select(m => new SelectListItem
            {
                Value = m.HospitalID.ToString(), // Assuming ScreenId is of type int
                Text = $"{m.HospitalID} - {m.HospitalName}"
            });
                    }

                    @Html.DropDownListFor(model => model.HospitalID, screenList, "Select Hospital ID", new { @class = "form-control" })
                    <label asp-for="HospitalID" class="control-label"></label>
                    <span asp-validation-for="HospitalID" class="text-danger"></span>
                </div>
                @*
                <div class="form-floating form-floating-outline mb-4">
                <input asp-for="HospitalID" class="form-control" placeholder="HospitalID" />
                <label asp-for="HospitalID" class="control-label" ></label>
                <span asp-validation-for="HospitalID" class="text-danger"></span>
                </div> *@

                <div class="form-floating form-floating-outline mb-4">
                    @{
                        var screenlist = ((IEnumerable<ClinicAdminModel>)ViewData["facid"])
                        .Select(m => new SelectListItem
            {
                Value = m.FacilityID.ToString(), // Assuming ScreenId is of type int
                Text = $"{m.FacilityID} - {m.ClinicName}"
            });
                    }

                    @Html.DropDownListFor(model => model.FacilityID, screenlist, "Select Facility  ID", new { @class = "form-control" })
                    <label asp-for="FacilityID" class="control-label"></label>
                    <span asp-validation-for="FacilityID" class="text-danger"></span>
                </div>

                @* <div class="form-floating form-floating-outline mb-4">

                <input asp-for="FacilityID" class="form-control" placeholder="FacilityID" />
                <label asp-for="FacilityID" class="control-label"></label>
                <span asp-validation-for="FacilityID" class="text-danger"></span>
                </div>   *@
                <div class="form-group">
                    <label class="control-label">FacilityStatus:</label><br />
                    <div class="form-check form-check-inline">
                        <input asp-for="FacilityStatus" class="form-check-input" type="radio" value="Active" id="ActiveRadio" />
                        <label class="form-check-label" for="ActiveRadio">Active</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input asp-for="FacilityStatus" class="form-check-input" type="radio" value="InActive" id="InActiveRadio" />
                        <label class="form-check-label" for="InActiveRadio">InActive</label>

                    </div>
                    <span asp-validation-for="FacilityStatus" class="text-danger"></span>

                </div>



            </div>
        </div>

    </div>

    <div class="col-md-12 col-lg-3">
    </div>
</div>
<br />


<div class="row">
    <div class="form-group">
        <div class="container">
            <center>
            <button type="submit" style="width:180px" asp-action="GetHospitalFacilityMapping" value="Save" class="btn btn-primary">Save</button>
            </center>

            @if (ViewBag.Message != null)
            {
                <div class="alert alert-success">
                    @ViewBag.Message
                </div>
            }
        </div>

    </div>
</div>








