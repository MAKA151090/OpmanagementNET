@model HealthCare.Models.HospitalFacilityMappingModel

@{
    ViewData["Title"] = "HospitalFacilityMapping";
    Layout = "~/Views/Shared/_ContentNavbarLayout.cshtml";
}

<div class="card xl-8">
    <div class="card-body pt-2 mt-1">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h2 class="text-primary mb-1">HospitalFacilityMapping</h2>
            <small class="text-muted float-end"></small>
    
        </div>
    </div>

        <form asp-action="HospitalFacilityMapping">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row gy-4">

            <div class="col-md-12 col-lg-4">
                <div class="card">
                    <div class="card-body">

                        <div class="form-floating form-floating-outline mb-4">
                 <input asp-for="HospitalID" class="form-control" placeholder="HospitalID" />
                <label asp-for="HospitalID" class="control-label" ></label>
                <span asp-validation-for="HospitalID" class="text-danger"></span>
            </div>
                        <div class="form-floating form-floating-outline mb-4">

                <input asp-for="FacilityID" class="form-control" placeholder="FacilityID" />
                <label asp-for="FacilityID" class="control-label"></label>
                <span asp-validation-for="FacilityID" class="text-danger"></span>
            </div>  
            <div class="form-group">
                <label class="control-label">FacilityStatus:</label><br />
                <div class="form-check form-check-inline">
                    <input asp-for="FacilityStatus" class="form-check-input" type="radio" value="Active" id="ActiveRadio" />
                    <label class="form-check-label" for="ActiveRadio">Active</label>
                </div>
                <div class="form-check form-check-inline">
                    <input asp-for="FacilityStatus" class="form-check-input" type="radio" value="InActive" id="InActiveRadio" />
                    <label class="form-check-label" for="InActiveRadio">InActive</label>
                </div>
                <span asp-validation-for="FacilityStatus" class="text-danger"></span>
            </div>
         
           @*  <div class="form-group">
                <label asp-for="lastUpdatedDate" class="control-label"></label>
                <input asp-for="lastUpdatedDate" class="form-control" />
                <span asp-validation-for="lastUpdatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="lastUpdatedUser" class="control-label"></label>
                <input asp-for="lastUpdatedUser" class="form-control" />
                <span asp-validation-for="lastUpdatedUser" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="lastUpdatedMachine" class="control-label"></label>
                <input asp-for="lastUpdatedMachine" class="form-control" />
                <span asp-validation-for="lastUpdatedMachine" class="text-danger"></span>
            </div> *@
            <div class="form-group">
                            <input type="submit" asp-action="GetHospitalFacilityMapping" value="Save" class="btn btn-primary" />
            </div>
            @if (ViewBag.Message != null)
            {
                <div class="alert alert-success">


                    @ViewBag.Message
                </div>

            }
        </form>
    </div>
</div>


