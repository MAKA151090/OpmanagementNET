@model HealthCare.Models.EWSMasterModel

@{
    ViewData["Title"] = "EWSMaster";
    Layout = "~/Views/Shared/_ContentNavbarLayout.cshtml";
}


@section PageStyles {
    <link rel="stylesheet" href="~/vendor/css/pages/page-auth.css">
}
<div class="row">

    <div class="col-md-12 col-lg-7 ">
        <div class="card">
            <div class="card-body ">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div class="container">
                        <h2 class="centered text-primary mb-1">EWSMaster</h2>

                    </div>
                </div>
            </div>
        </div>

        <div class="row" style="height:8%">
        </div>
        <div class="row">

            <div class="col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-body">
                                <div class="form-floating form-floating-outline mb-4">
                            <input asp-for="ObservationTypeID" class="form-control" placeholder="ObservationTypeID" />
                <label asp-for="ObservationTypeID" class="control-label"></label>
                
                <span asp-validation-for="ObservationTypeID" class="text-danger"></span>
            </div>
                        <div class="form-floating form-floating-outline mb-4">
                            <input asp-for="ObservationName" class="form-control" placeholder="ObservationName" />
                <label asp-for="ObservationName" class="control-label"></label>
               
                <span asp-validation-for="ObservationName" class="text-danger"></span>
            </div>
                        <div class="form-floating form-floating-outline mb-4">
                            <input asp-for="Unit" class="form-control" placeholder="Unit" />
                <label asp-for="Unit" class="control-label"></label>
                
                <span asp-validation-for="Unit" class="text-danger"></span>
            </div>
                        <div class="form-floating form-floating-outline mb-4">
                            <input asp-for="Range" class="form-control" placeholder="Range" />
                <label asp-for="Range" class="control-label"></label>
                
                <span asp-validation-for="Range" class="text-danger"></span>
            </div>
                        <div class="form-floating form-floating-outline mb-4">
                            <input asp-for="Frequency" class="form-control" placeholder="Frequency" />
                <label asp-for="Frequency" class="control-label"></label>
                
                <span asp-validation-for="Frequency" class="text-danger"></span>
            </div>
                    </div>

                </div>

                <div class="row" style="height:8%">
                </div>
                <div class="row">

                    <div class="col-md-12 col-lg-12">

                        <div class="form-group">
                            <div class="container">
                                <button type="submit" style="centered" value="Create" class="btn btn-primary">Save</button>


                                @if (ViewBag.Message != null)
                                {
                                    <div class="alert alert-success">
                                        @ViewBag.Message
                                    </div>
                                }
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
        </div>
    </div>
    <div class="col-md-12 col-lg-5">
        <div class="form-floating form-floating-outline mb-4">
            <img src="~/img/illustrations/Doc.png" class="authentication-image d-none d-lg-block" data-app-light-img="illustrations/auth-basic-mask-light.png" data-app-dark-img="illustrations/auth-basic-mask-dark.png">
        </div>
    </div>
</div>
         
