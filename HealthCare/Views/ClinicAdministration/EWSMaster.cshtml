@model HealthCare.Models.EWSMasterModel

@{
    ViewData["Title"] = "EWSMaster";
    Layout = "~/Views/Shared/_ContentNavbarLayout.cshtml";
}

<form asp-controller="ClinicAdministration" asp-action="GetEWSMaster">
@section PageStyles {
    <link rel="stylesheet" href="~/vendor/css/pages/page-auth.css">
}


    <div class="row">
        <div class="col-md-12 col-lg-2">
        </div>
        <div class="col-md-12 col-lg-8">
            <div class="card">
                <div class="card-body " style="background-color:#8c62c9">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <div class="container">
                            <h2 class="centered text-white" style="font-family:'Lucida Bright'">EWSMaster</h2>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />

    <div class="row" style="height:8%">
    </div>

    <div class="row gy-4">
        <div class="col-md-12 col-lg-2">
        </div>
        <div class="col-md-12 col-lg-8">
            <div class="card">
                <div class="card-body " style="background-image: linear-gradient(to right, #FFFFFF 0%, #FFFFFF 51%, #ece5f6 100%);">

                                <div class="form-floating form-floating-outline mb-4">
                            <input asp-for="ObservationTypeID" class="form-control" placeholder="ObservationTypeID" />
                <label asp-for="ObservationTypeID" class="control-label"></label>
                
                <span asp-validation-for="ObservationTypeID" class="text-danger"></span>
            </div>
                        <div class="form-floating form-floating-outline mb-4">
                            <input asp-for="ObservationName" class="form-control" placeholder="ObservationName" />
                <label asp-for="ObservationName" class="control-label"></label>
               
                <span asp-validation-for="ObservationName" class="text-danger"></span>
            </div>
                        <div class="form-floating form-floating-outline mb-4">
                            <input asp-for="Unit" class="form-control" placeholder="Unit" />
                <label asp-for="Unit" class="control-label"></label>
                
                <span asp-validation-for="Unit" class="text-danger"></span>
            </div>
                        <div class="form-floating form-floating-outline mb-4">
                            <input asp-for="Range" class="form-control" placeholder="Range" />
                <label asp-for="Range" class="control-label"></label>
                
                <span asp-validation-for="Range" class="text-danger"></span>
            </div>
                        <div class="form-floating form-floating-outline mb-4">
                            <input asp-for="Frequency" class="form-control" placeholder="Frequency" />
                <label asp-for="Frequency" class="control-label"></label>
                
                <span asp-validation-for="Frequency" class="text-danger"></span>
            </div>
                    <br />
                </div>
            </div>
        </div>
        <div class="col-md-12 col-lg-2">
        </div>
    </div>
    <br />
    <div class="form-group">
        <center>

            <button type="submit" style="width:180px" asp-action="GetEWSMaster" value="Save" class="btn btn-primary">Save</button>


            @if (ViewBag.Message != null)
            {
                <div class="alert alert-success">
                    @ViewBag.Message
                </div>
            }
        </center>
    </div>
</form>

