@model HealthCare.Models.HospitalBedMasterModel

@{
    ViewData["Title"] = "HospitalBedMaster";
    Layout = "~/Views/Shared/_ContentNavbarLayout.cshtml";
}
<form asp-controller="ClinicAdministration" asp-action="GetHospitalBedMaster">
@section PageStyles {
    <link rel="stylesheet" href="~/vendor/css/pages/page-auth.css">
}


    <div class="row">
        <div class="col-md-12 col-lg-1">
        </div>
        <div class="col-md-12 col-lg-8">
            <div class="card">
                <div class="card-body " style="background-color:#8c62c9">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <div class="container">
                            <h2 class="centered text-white" style="font-family:'Lucida Bright'">HospitalBedMaster</h2>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />

    <div class="row" style="height:8%">
    </div>

    <div class="row gy-4">
        <div class="col-md-12 col-lg-1">
        </div>
        <div class="col-md-12 col-lg-4">
            <div class="card">
                <div class="card-body " style="background-image: linear-gradient(to right, #FFFFFF 0%, #FFFFFF 51%, #ece5f6 100%);">
               <div class="form-floating form-floating-outline mb-4">

                            <input asp-for="BedID" class="form-control" placeholder="BedID" />
                <label asp-for="BedID" class="control-label"></label>
                <span asp-validation-for="BedID" class="text-danger"></span>
            </div>
                        <div class="form-floating form-floating-outline mb-4">

                            <input asp-for="FacilityID" class="form-control" placeholder="FacilityID" />
                            <label asp-for="FacilityID" class="control-label"></label>
                            <span asp-validation-for="FacilityID" class="text-danger"></span>
                        </div>

                        <div class="form-floating form-floating-outline mb-4">

                            <input asp-for="BedName" class="form-control" placeholder="BedName" />
                <label asp-for="BedName" class="control-label"></label>
                <span asp-validation-for="BedName" class="text-danger"></span>
            </div>

                        <div class="form-floating form-floating-outline mb-4">

                            <input asp-for="BedType" class="form-control" placeholder="BedType" />
                <label asp-for="BedType" class="control-label"></label>
                <span asp-validation-for="BedType" class="text-danger"></span>
            </div>

                        <div class="form-floating form-floating-outline mb-4">

                            <input asp-for="RoomType" class="form-control" placeholder="RoomType" />
                <label asp-for="RoomType" class="control-label"></label>
                <span asp-validation-for="RoomType" class="text-danger"></span>
            </div>
                </div>
            </div>
        </div>
        <div class="col-md-12 col-lg-4">


            <div class="card">
                <div class="card-body " style="background-image: linear-gradient(to right, #FFFFFF 0%, #FFFFFF 51%, #ece5f6 100%);">


                        <div class="form-floating form-floating-outline mb-4">

                            <input asp-for="RoomFloor" class="form-control" placeholder="RoomFloor" />
                <label asp-for="RoomFloor" class="control-label"></label>
                <span asp-validation-for="RoomFloor" class="text-danger"></span>
            </div>
                        <div class="form-floating form-floating-outline mb-4">
                            @{
                                var screenList = ((IEnumerable<NurseStationMasterModel>)ViewData["nurseid"])
                                .Select(m => new SelectListItem
            {
                Value = m.NurseStationID.ToString(), // Assuming ScreenId is of type int
                Text = $"{m.NurseStationID}"
            });
                            }

                            @Html.DropDownListFor(model => model.NurseStationID, screenList, "Select Nurse Station ID", new { @class = "form-control" })
                            <label asp-for="NurseStationID" class="control-label"></label>
                            <span asp-validation-for="NurseStationID" class="text-danger"></span>
                        </div>


                       @*  <div class="form-floating form-floating-outline mb-4">

                            <input asp-for="NurseStationID" class="form-control" placeholder="NurseStationID" />
                <label asp-for="NurseStationID" class="control-label"></label>
                <span asp-validation-for="NurseStationID" class="text-danger"></span>
            </div> *@

                        <div class="form-floating form-floating-outline mb-4">

                            <input asp-for="CostPerDay" class="form-control" placeholder="CostPerDay" />
                <label asp-for="CostPerDay" class="control-label"></label>
                <span asp-validation-for="CostPerDay" class="text-danger"></span>
            </div>

                    <br />





                </div>
            </div>

            <div class="col-md-12 col-lg-1" style="height=10%">
                <div class="form-floating form-floating-outline mb-4">
                </div>
            </div>
            <div class="form-group">
                <center>
                    <button type="submit" style="width:180px" asp-action="GetHospitalBedMaster" value="Create" class="btn btn-primary">Save</button>


                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-success">


                            @ViewBag.Message
                        </div>
                    }
                </center>
            </div>
        </div>
    </div>
</form>

