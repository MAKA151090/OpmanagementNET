@model HealthCare.Models.InternalDepartmentMasterModel

@{
    ViewData["Title"] = "InternalDepartmentMaster";
    Layout = "~/Views/Shared/_ContentNavbarLayout.cshtml";
}
<form asp-controller="ClinicAdministration" asp-action="GetInternalDepartmentMaster">
    @section PageStyles {
    <link rel="stylesheet" href="~/vendor/css/pages/page-auth.css">
}





        <div class="row">
            <div class="col-md-12 col-lg-2">
            </div>
            <div class="col-md-12 col-lg-8">
                <div class="card">
                    <div class="card-body " style="background-color:#8c62c9">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <div class="container">
                                <h2 class="centered text-white" style="font-family:'Lucida Bright'">InternalDepartmentMaster</h2>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br />

        <div class="row" style="height:8%">
        </div>

        <div class="row gy-4">
            <div class="col-md-12 col-lg-2">
            </div>
            <div class="col-md-12 col-lg-8">
                <div class="card">
                    <div class="card-body " style="background-image: linear-gradient(to right, #FFFFFF 0%, #FFFFFF 51%, #ece5f6 100%);">


                        <div class="form-floating form-floating-outline mb-4">
                            <input asp-for="DepartmentID" class="form-control" placeholder="DepartmentID" />
                            <label asp-for="DepartmentID" class="control-label"></label>

                            <span asp-validation-for="DepartmentID" class="text-danger"></span>
                        </div>
                        <div class="form-floating form-floating-outline mb-4">
                            <input asp-for="DepartmentName" class="form-control" placeholder="DepartmentName" />
                            <label asp-for="DepartmentName" class="control-label"></label>

                            <span asp-validation-for="DepartmentName" class="text-danger"></span>
                        </div>
                            <div class="form-floating form-floating-outline mb-4">
                                @{
                                    var facilityList = ((IEnumerable<ClinicAdminModel>)ViewData["facilityid"])
                                    .Select(m => new SelectListItem
            {
                Value = m.FacilityID.ToString(), // Assuming FacilityID is of type int
                Text = $"{m.FacilityID} - {m.ClinicName}"
            });
                                }

                                @Html.DropDownListFor(model => model.FacilityID, facilityList, "Select Facility ID", new { @class = "form-control" })
                                <label asp-for="FacilityID" class="control-label"></label>
                                <span asp-validation-for="FacilityID" class="text-danger"></span>
                            </div>



                        <br />
                    </div>
                </div>
            </div>
            <div class="col-md-12 col-lg-2">
            </div>
        </div>
        <br />
        <div class="form-group">
            <center>
              
                <button type="submit" style="width:180px" asp-action="GetInternalDepartmentMaster" value="Create" class="btn btn-primary">Save</button>

                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-success">
                        @ViewBag.Message
                    </div>
                }
            </center>
        </div>
    </form>



