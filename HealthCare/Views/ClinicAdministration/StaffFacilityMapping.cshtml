@model StaffFacilityMappingModel

@{
    ViewData["Title"] = "StaffFacilityMapping";
    Layout = "~/Views/Shared/_ContentNavbarLayout.cshtml";
}

@section PageStyles {
    <link rel="stylesheet" href="~/vendor/css/pages/page-auth.css">
}

<div class="row" style="margin-top:70px">
    <div class="col-md-12 col-lg-3 ">
    </div>

    <div class="col-md-12 col-lg-6 ">
        <div class="card">
            <div class="card-body " style="background-color:#8c62c9">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div class="container">
                        <h2 class="centered text-white" style="font-family:'Lucida Bright'">StaffFacilityMap</h2>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="row" style="height:5%">
</div>



<br />

<div class="row">
    <div class="col-md-12 col-lg-3">
    </div>
    <div class="col-md-12 col-lg-6">
        <div class="card">
            <div class="card-body " style="background-image: linear-gradient(to right, #FFFFFF 0%, #FFFFFF 51%, #ece5f6 100%);">

                        <div class="form-floating form-floating-outline mb-4">
                            @{
                                var screenList = ((IEnumerable<StaffAdminModel>)ViewData["staffid"])
                                .Select(m => new SelectListItem
            {
                Value = m.StrStaffID.ToString(), // Assuming ScreenId is of type int
                Text = $"{m.StrStaffID}"
            });
                            }

                            @Html.DropDownListFor(model => model.StaffId, screenList, "Select Staff ID", new { @class = "form-control" })
                            <label asp-for="StaffId" class="control-label"></label>
                            <span asp-validation-for="StaffId" class="text-danger"></span>
                        </div>

                       @*  <div class="form-floating form-floating-outline mb-4">

                            <input asp-for="StaffId" class="form-control" placeholder="Staff ID" />
                <label asp-for="StaffId" class="control-label"></label>
                <span asp-validation-for="StaffId" class="text-danger"></span>
            </div> *@


                        <div class="form-floating form-floating-outline mb-4">
                            @{
                                var screenlist = ((IEnumerable<ClinicAdminModel>)ViewData["stafffacid"])
                                .Select(m => new SelectListItem
            {
                Value = m.FacilityID.ToString(), // Assuming ScreenId is of type int
                Text = $"{m.FacilityID}"
            });
                            }

                            @Html.DropDownListFor(model => model.FacilityID, screenlist, "Select Facility ID", new { @class = "form-control" })
                            <label asp-for="FacilityID" class="control-label"></label>
                            <span asp-validation-for="FacilityID" class="text-danger"></span>
                        </div>

                        @* <div class="form-floating form-floating-outline mb-4">

                            <input asp-for="FacilityID" class="form-control" placeholder="FacilityID" />
                <label asp-for="FacilityID" class="control-label"></label>
                <span asp-validation-for="FacilityID" class="text-danger"></span>
            </div> *@
                        <div class="form-floating form-floating-outline mb-4">

                            <input asp-for="FromHour" class="form-control" placeholder="FromHour" />
                            <label asp-for="FromHour" class="control-label"></label>
                            <span asp-validation-for="FromHour" class="text-danger"></span>
                        </div>
                        <div class="form-floating form-floating-outline mb-4">

                            <input asp-for="ToHour" class="form-control" placeholder="ToHour" />
                            <label asp-for="ToHour" class="control-label"></label>
                            <span asp-validation-for="ToHour" class="text-danger"></span>
                        </div>
                        <div class="form-floating form-floating-outline mb-4">

                            <input asp-for="Active" class="form-control" placeholder="Active" />
                            <label asp-for="Active" class="control-label"></label>
                            <span asp-validation-for="Active" class="text-danger"></span>
                        </div>

            </div>
        </div>

    </div>

    <div class="col-md-12 col-lg-3">
    </div>
</div>
<br />


<div class="row">
    <div class="form-group">
        <div class="container">
            <center>
                <button type="submit" style="width:180px" asp-action="GetStaffFacilityMap" value="Save" class="btn btn-primary">Save</button>
            </center>

            @if (ViewBag.Message != null)
            {
                <div class="alert alert-success">
                    @ViewBag.Message
                </div>
            }
        </div>

    </div>
</div>



