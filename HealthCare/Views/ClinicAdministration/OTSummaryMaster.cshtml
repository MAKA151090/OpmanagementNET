@model HealthCare.Models.OTSummaryMasterModel

@{
    ViewData["Title"] = "OTSummaryMaster";
    Layout = "~/Views/Shared/_ContentNavbarLayout.cshtml";
}

<h1>OTSummaryMaster</h1>

<h4>OTSummaryMasterModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SummaryMaster" asp-controller="ClinicAdministration">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-floating form-floating-outline mb-4">
                <input asp-for="QuestionID" class="form-control" placeholder="QuestionID" />
                <label asp-for="QuestionID" class="control-label"></label>

                <span asp-validation-for="QuestionID" class="text-danger"></span>
            </div>

            <div class="form-floating form-floating-outline mb-4">
                <input asp-for="Question" class="form-control" placeholder="QuestionID" />
                <label asp-for="Question" class="control-label"></label>

                <span asp-validation-for="Question" class="text-danger"></span>
            </div>

          
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>

            @if (ViewBag.Message != null)
            {
                <div class="alert alert-success">
                    @ViewBag.Message
                </div>
            }

        </form>
    </div>
</div>

