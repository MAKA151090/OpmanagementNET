@model BloodGroupModel

@{
    ViewData["Title"] = "BloodGroupList";
    Layout = "~/Views/Shared/_ContentNavbarLayout.cshtml";
}

<div class="card xl-8">
    <div class="card-body pt-2 mt-1">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h2 class="text-primary mb-1"> BloodGroupList</h2>
            <small class="text-muted float-end"></small>

        </div>
    </div>
    <form asp-action="BloodGroupList">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>


<div class="row">
    <div class="col-1">
        </div>
<div class="col-5">
    <div class="card mb-4">
      
        <div class="card-body">
           
            <div class="demo-inline-spacing">

                <div class="form-floating form-floating-outline mb-4">

                    <input asp-for="IntBg_Id" class="form-control" placeholder="IntBg_Id" />
                    <label asp-for="IntBg_Id" class="control-label"></label>
                    <span asp-validation-for="IntBg_Id" class="text-danger"></span>
                </div>
                <div class="form-group">

                    <select asp-for="BloodGroup" class="form-control">
                        <option value="">Select Blood Group</option>
                        <option value="A+">A+</option>
                        <option value="A-">A-</option>
                        <option value="B+">B+</option>
                        <option value="B-">B-</option>
                        <option value="AB+">AB+</option>
                        <option value="AB-">AB-</option>
                        <option value="O+">O+</option>
                        <option value="O-">O-</option>
                    </select>

                    <span asp-validation-for="BloodGroup" class="text-danger"></span>

                </div>

                <div>

                                <center>
                                    <button type="submit" class="btn btn-primary">Save</button>

                                    @if (ViewBag.Message != null)
                                    {
                                        <div class="alert alert-success">


                                            @ViewBag.Message
                                        </div>

                                    }
                                 

                      </center>
                                      </div>

            </div>
        </div>
          
            </div>
      
          
            </form>
        </div>

