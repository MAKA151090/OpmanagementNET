@model BloodGroupModel

@{
    ViewData["Title"] = "BloodGroupList";
    Layout = "~/Views/Shared/_ContentNavbarLayout.cshtml";
}



@section PageStyles {
    <link rel="stylesheet" href="~/vendor/css/pages/page-auth.css">
}
<div class="row">
  
    <div class="col-md-12 col-lg-7 ">
        <div class="card" >
            <div class="card-body ">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div class="container">
                        <h2 class="centered text-primary mb-1">BloodGroupList</h2>

                    </div>
                </div>
            </div>
        </div>

        <div class="row" style="height:8%">
        </div>

        <form>
          <div class="row">
       
        <div class="col-md-12 col-lg-12">
            <div class="card">
                <div class="card-body">

                        <div class="form-floating form-floating-outline mb-4">

                            <input asp-for="IntBg_Id" class="form-control" placeholder="IntBg_Id" />
                            <label asp-for="IntBg_Id" class="control-label"></label>
                            <span asp-validation-for="IntBg_Id" class="text-danger"></span>
                        </div>
                        <div class="form-group">

                            <select asp-for="BloodGroup" class="form-control">
                                <option value="">Select Blood Group</option>
                                <option value="A+">A+</option>
                                <option value="A-">A-</option>
                                <option value="B+">B+</option>
                                <option value="B-">B-</option>
                                <option value="AB+">AB+</option>
                                <option value="AB-">AB-</option>
                                <option value="O+">O+</option>
                                <option value="O-">O-</option>
                            </select>

                            <span asp-validation-for="BloodGroup" class="text-danger"></span>

                        </div>
                    </div>

                </div>

                <div class="row" style="height:12%">
                </div>
                        <div class="row">

                            <div class="col-md-12 col-lg-12">

                        <div class="form-group">
                            <div class="container">
                                <button type="submit" style="centered" asp-action="GetProcedureCodeMaster" value="Save" class="btn btn-primary">Save</button>
                                @if (ViewBag.Message != null)
                                {
                                    <div class="alert alert-success">
                                        @ViewBag.Message
                                    </div>
                                }
                            </div>

                        </div>
            </div>
        </div>
    </div>
</div>
 </form>
<div class="row">
</div>


    </div>


<div class="col-md-12 col-lg-5">
    <div class="form-floating form-floating-outline mb-4">
        <img src="~/img/illustrations/Doc.png" class="authentication-image d-none d-lg-block" data-app-light-img="illustrations/auth-basic-mask-light.png" data-app-dark-img="illustrations/auth-basic-mask-dark.png">
    </div>
</div>


</div>

