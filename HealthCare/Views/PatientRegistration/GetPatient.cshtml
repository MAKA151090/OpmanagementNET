@model PatientRegistrationModel

@{
    ViewData["Title"] = "GetPatient";
    Layout = "~/Views/Shared/_ContentNavbarLayout.cshtml";
}

<h1>GetPatient</h1>

@using (Html.BeginForm("HandleReg", "PatientRegistration", FormMethod.Post))
{
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="GetPatient">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="PatientID" class="control-label"></label>
                    <input asp-for="PatientID" class="form-control" />
                    <span asp-validation-for="PatientID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FacilityID" class="control-label"></label>
                    <input asp-for="FacilityID" class="form-control" />
                    <span asp-validation-for="FacilityID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <center>
                    <button type="submit" name="buttonType" value="submit" class="btn btn-primary">Submit</button>
                    </center>
                </div>
            </form>
        </div>
    </div>
}

