@model List<PatientEPrescriptionPrintModel>

@{
    ViewData["Title"] = "PatientEPrescriptionPrint";
    Layout = "~/Views/Shared/_ContentNavbarLayout.cshtml";
}


@using (Html.BeginForm("PrescriptionPrint", "PatientPrescription", FormMethod.Post))
{

    <form asp-action="PatientEPrescriptionPrint">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

<div class="row" style="margin-top:70px">
    <div class="col-md-12 col-lg-2 ">
    </div>

    <div class="col-md-12 col-lg-7 ">
        <div class="card">
            <div class="card-body " style="background-color:#8c62c9">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div class="container">
                        <h2 class="centered text-white" style="font-family:'Lucida Bright'">OtScheduleView</h2>

                    </div>
                </div>
            </div>
        </div>

        <div class="row" style="height:8%">
        </div>

        <div class="row">

            <div class="col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-body " style="background-image: linear-gradient(to right, #FFFFFF 0%, #FFFFFF 51%, #ece5f6 100%);">


                            <div class="form-floating form-floating-outline mb-4">
                                <input type="text" id="PatientID" name="PatientID" class="form-control" placeholder="PatientID" />
                    <label for="PatientID" class="control-label">Patient ID</label>
                    
                </div>
                            <div class="form-floating form-floating-outline mb-4">
                                <input type="text" id="CaseVisitID" name="CaseVisitID" class="form-control" placeholder="CaseVisitID" />
                    <label for="CaseVisitID" class="control-label">CaseVisit ID</label>
                    
                </div>
                            <div class="form-floating form-floating-outline mb-4">
                                <input type="text" id="OrderID" name="OrderID" class="form-control" placeholder="OrderID" />
                    <label for="OrderID" class="control-label">Order ID</label>
                   
                </div>
                            </div>

                        </div>
                    </div>
                </div>

                <div class="row" style="height:8%">
                </div>
                <div class="form-group">
                    <center>

                        <button type="submit" value="Get" class="btn btn-primary">Get</button>

                     @*    <button type="submit" asp-action="GetReport" value="GetReport" class="btn btn-primary">GetReport</button>
 *@

                    </center>
                </div>
                <div class="col-md-12 col-lg-3">
                </div>
            </div>
        </div>
            <br />

    <div class="row" style="margin-top:70px">
                    @if (Model != null)
                                {
               

                    <div class="col-md-12 col-lg-12">
                        <div class="card">
                            <div class="card-body" style="background-image: linear-gradient(to right, #FFFFFF 0%, #FFFFFF 51%, #ece5f6 100%);">


    <table class="table">
        <thead>
            <tr>
                <th>
                    PatientName
                </th>
                <th>
                   Patient ID
                </th>
                <th>
                   Casevisit ID
                </th>
                <th>
                    Order ID
                </th>
                <th>
                    Medication Name
                </th>
                <th>
                    Unit
                </th>
                <th>
                    Unit Category
                </th>
                <th>
                    Frequency
                </th>
                <th>
                    Frequency Unit
                </th>
                <th>
                   Duration
                </th>
                <th>
                    Quantity
                </th>
                <th>
                    End Date
                </th>
                <th>
                    Instruction
                </th>
                <th>
                    Doctor Name
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @if (Model != null)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.PatientName</td>
                        <td>@item.PatientID</td>
                        <td>@item.CaseVisitID</td>
                        <td>@item.OrderID</td>
                        <td>@item.MedicactionName</td>
                        <td>@item.Unit</td>
                        <td>@item.UnitCategory</td>
                        <td>@item.Frequency</td>
                        <td>@item.FrequencyUnit</td>
                        <td>@item.Duration</td>
                        <td>@item.Quantity</td>
                        <td>@item.EndDate</td>
                        <td>@item.Instructions</td>
                        <td>@item.DoctorName</td>

                    </tr>
                }
            }
        </tbody>
    </table>
  
        <div class="form-group">
            <input type="submit" value="Print" class="btn btn-primary" />
        </div>
       
   



                        </div>
                    </div>
                </div>




            }

        </div>


    </form>
}
        
