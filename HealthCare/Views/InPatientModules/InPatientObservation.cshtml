@model InpatientObservationViewModel

@{
    ViewData["Title"] = "InPatientObservation";
    Layout = "~/Views/Shared/_ContentNavbarLayout.cshtml";
}
<div class="card xl-6">
    <div class="card-body pt-2 mt-1">
        <div class="card-header d-flex justify-content-between align-items-center" style="height: 50px;">
            <h2 class="text-primary mb-1"> InpatientViewResult</h2>
            <small class="text-muted float-end"></small>

        </div>
    </div>


@using (Html.BeginForm("GetInpatientViewResult", "InPatientModules", FormMethod.Post))
{

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row gy-4">

                    <div class="col-md-12 col-lg-1">
                    </div>
                    <div class="col-md-12 col-lg-4">
                        <div class="card">
                            <div class="card-body">

                                <div class="form-floating form-floating-outline mb-4">

                            <input asp-for="BedNoID" class="form-control" placeholder="BedNoID" />
                    <label asp-for="BedNoID" class="control-label"></label>
                    <span asp-validation-for="BedNoID" class="text-danger"></span>
                </div>

                        <div class="form-floating form-floating-outline mb-4">

                            <input asp-for="PatientID" class="form-control" placeholder="PatientID" />
                    <label asp-for="PatientID" class="control-label"></label>
                    <span asp-validation-for="PatientID" class="text-danger"></span>
                </div>

                        <div class="form-floating form-floating-outline mb-4">

                            <input asp-for="ObservationID" class="form-control" placeholder="ObservationID" />
                    <label asp-for="ObservationID" class="control-label"></label>
                    <span asp-validation-for="ObservationID" class="text-danger"></span>
                </div>
               
               @*  <div class="form-group">
                    <label asp-for="lastupdatedDate" class="control-label"></label>
                    <input asp-for="lastupdatedDate" class="form-control" />
                    <span asp-validation-for="lastupdatedDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="lastUpdatedUser" class="control-label"></label>
                    <input asp-for="lastUpdatedUser" class="form-control" />
                    <span asp-validation-for="lastUpdatedUser" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="lastUpdatedMachine" class="control-label"></label>
                    <input asp-for="lastUpdatedMachine" class="form-control" />
                    <span asp-validation-for="lastUpdatedMachine" class="text-danger"></span>
                </div> *@

            <button type="submit" name="buttonType" value="get" class="btn btn-primary">get</button>
            @if (ViewBag.Message != null)
            {
                <div class="alert alert-success">
                    @ViewBag.Message
                </div>
            }
           
              
           </div>
           </div>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>

                <th>
                    Observation Name
                </th>
                <th>
                    Answer
                </th>
                <th>
                    Unit
                </th>
                <th>
                    Range
                </th>
                <th>
                    Frequency
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @for (int i = 0; i < Model.SHviewInpatientObs.Count; i++)
                {
                    <tr>
                        <td><input type="text" asp-for="@Model.SHviewInpatientObs[i].ObservationName"/> <input type="hidden" asp-for="@Model.SHviewInpatientObs[i].ObservationTypeID" /></td>
                        
                        <td><input type="text" asp-for="@Model.SHviewInpatientObs[i].Answer" /></td>
                        <td><input type="text" asp-for="@Model.SHviewInpatientObs[i].Unit" /></td>
                         <td><input type="text" asp-for="@Model.SHviewInpatientObs[i].Frequency" /></td>
                        <td><input type="text" asp-for="@Model.SHviewInpatientObs[i].Range" /></td>
                       @*  <td>@Model.SHviewInpatientObs[i].Unit</td>
                        <td>@Model.SHviewInpatientObs[i].Range</td>
                        <td>@Model.SHviewInpatientObs[i].Frequency</td> *@
                    </tr>
                } 
            }
        </tbody>
    </table>

    @if (Model != null)
    {
        @if (Model.SHviewInpatientObs.Count != 0)
        {

            <div class="form-group">
                <label asp-for="DateTime" class="control-label"></label>
                <input asp-for="DateTime" class="form-control" />
                <span asp-validation-for="DateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NurseID" class="control-label"></label>
                <input asp-for="NurseID" class="form-control" />
                <span asp-validation-for="NurseID" class="text-danger"></span>
            </div>
            <div>

                <button type="submit" name="buttonType" value="save" class="btn btn-primary">save</button>
            </div>
           
        }
    }
}

